#!/bin/bash

# Builds a local, native build by default
# Can build a container build if passed appropriate args

set -euf -o pipefail

if [ $# -eq 0 ]
then
  if [[ $OSTYPE == 'linux-gnu' ]]
  then
    CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o bin/manager main.go
  else
    make build
  fi
else
  case $1 in 
  docker)
    docker login -u $DOCKER_USER -p $DOCKER_PASSWORD docker.greymatter.io
    make docker-build VERSION=latest
    ;;
  *) 
    echo "invalid argument $1"
    exit 1
    ;;
  esac
fi
